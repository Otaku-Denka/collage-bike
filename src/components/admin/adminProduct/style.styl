
*, *:before, *:after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

.admin-product-container
    padding-left 24rem;
    display: block;
    background: var(--admin-bgColor)
    padding-top: 5.6rem
    @media ( max-width: 767px){
        padding-left:0px
    }


.admin-products-wrapper
    margin: 20px
    min-height: 646px
    position: relative

.admin-products-header
    max-width 100%

.admin-product-title-main-group
    flex 1 1 auto
    display: inline

